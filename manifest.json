{
	"name": "Birmingham Panopto Keeper",
	"version": "1.0",
	"description": "Download Panopto Videos from UoB Panopto",
	"manifest_version": 2,

	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "download-icon.png"
	},
	"content_scripts": [
		{
			"matches": ["https://bham.cloud.panopto.eu/*"],
			"js": ["payload.js"]
		}
	],
	"permissions": [
		"activeTab",
		"downloads"
	]
}
